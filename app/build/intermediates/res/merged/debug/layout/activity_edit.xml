<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblName"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTextName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnChangeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btChange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutButtonName"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lblDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblDate"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTextDate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnResetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btReset" />

        <Button
            android:id="@+id/btnChangeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btChange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTextHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutButtonDate"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lblHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblHour"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtonHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTextHour"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnResetHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btReset" />

        <Button
            android:id="@+id/btnChangeHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btChange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTextLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutButtonHour"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lblLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblLocation"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtonLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTextLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnResetLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btReset" />

        <Button
            android:id="@+id/btnChangeLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btChange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutButtonLocation"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lblActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblActivity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtonActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTextActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnResetActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btReset" />

        <Button
            android:id="@+id/btnChangeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btChange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTextHeadphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutButtonActivity"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lblHeadphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblHeadphone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeadphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtonHeadphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTextHeadphone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnResetHeadphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btReset" />

        <Button
            android:id="@+id/btnChangeHeadphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btChange" />
    </LinearLayout>
</RelativeLayout>
